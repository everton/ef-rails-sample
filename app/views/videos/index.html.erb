<%= action_title 'Videos' %>

<ul id="videos_list">
  <% @videos.each do |video| %>
    <li class="video">
      <%= link_to video do %>
        <h2><%= video.title %></h2>

        <% unless video.published? %>
          <span class="status">(unpublished)</span>
        <% end %>

        <%= image_tag main_thumb_of(video) %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Video', new_video_path %>
